<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>

    <!-- Thread stripes -->
    <item android:left="20dp" android:top="20dp">
        <shape android:shape="rectangle">
            <size android:width="60dp" android:height="160dp"/>
            <solid android:color="#FF7043"/>
        </shape>
    </item>

    <item android:left="100dp" android:top="20dp">
        <shape android:shape="rectangle">
            <size android:width="60dp" android:height="160dp"/>
            <solid android:color="#FFEB3B"/>
        </shape>
    </item>

    <item android:left="180dp" android:top="20dp">
        <shape android:shape="rectangle">
            <size android:width="60dp" android:height="160dp"/>
            <solid android:color="#42A5F5"/>
        </shape>
    </item>

</layer-list>
