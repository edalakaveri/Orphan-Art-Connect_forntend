                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:onClick="openArtistProfile"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardBackgroundColor="#F5F3FF"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_waterproof" />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Priya Sharma"
                            android:textStyle="bold"
                            android:textColor="#1A202C"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Age 14"
                            android:textColor="#718096"
                            android:textSize="12sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Artist Card 2: Ahmed Hassan -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/artistCardAhmed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:onClick="openAhmedProfile"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardBackgroundColor="#F5F3FF"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            app:cardCornerRadius="16dp"
