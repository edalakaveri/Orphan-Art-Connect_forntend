<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/arrow_back"
                app:tint="#1A202C"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checkout"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1A202C"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <!-- Progress Indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/circle_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="#4A5568"
                android:textSize="14sp"
                android:layout_marginStart="8dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#E2E8F0"
                android:layout_marginHorizontal="12dp"/>

            <TextView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/circle_purple"
                android:gravity="center"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment"
                android:textColor="#1A202C"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Payment Method -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Method"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#2D3748"
            android:layout_marginBottom="16dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:useDefaultMargins="true"
            android:alignmentMode="alignMargins">

            <!-- Card Option -->
            <LinearLayout
                android:id="@+id/layoutCard"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_payment_normal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imgCard"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_card"
                    app:tint="#718096" />

                <TextView
                    android:id="@+id/txtCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Card"
                    android:layout_marginTop="8dp"
                    android:textColor="#4A5568"
                    android:textStyle="bold"
                    android:textSize="13sp"/>
            </LinearLayout>

            <!-- PayPal Option -->
            <LinearLayout
                android:id="@+id/layoutPaypal"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_payment_normal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imgPaypal"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_paypal"
                    app:tint="#718096" />

                <TextView
                    android:id="@+id/txtPaypal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PayPal"
                    android:layout_marginTop="8dp"
                    android:textColor="#4A5568"
                    android:textStyle="bold"
                    android:textSize="13sp"/>
            </LinearLayout>

            <!-- Apple Pay Option -->
            <LinearLayout
                android:id="@+id/layoutApplePay"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_payment_normal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imgApplePay"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_apple"
                    app:tint="#718096" />

                <TextView
                    android:id="@+id/txtApplePay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apple Pay"
                    android:layout_marginTop="8dp"
                    android:textColor="#4A5568"
                    android:textStyle="bold"
                    android:textSize="13sp"/>
            </LinearLayout>

            <!-- Google Pay Option -->
            <LinearLayout
                android:id="@+id/layoutGooglePay"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_payment_selected"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imgGooglePay"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_google"
                    app:tint="#805AD5" />

                <TextView
                    android:id="@+id/txtGooglePay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Google Pay"
                    android:layout_marginTop="8dp"
                    android:textColor="#805AD5"
                    android:textStyle="bold"
                    android:textSize="13sp"/>
            </LinearLayout>
        </GridLayout>

        <!-- Redirect Info -->
        <TextView
            android:id="@+id/txtRedirectInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complete your payment using Google Pay on the next screen."
            android:textColor="#2B6CB0"
            android:background="#EBF8FF"
            android:padding="16dp"
            android:layout_marginTop="24dp"
            android:textSize="13sp"
            android:lineSpacingExtra="4dp"/>

        <!-- Order Summary -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F7FAFC"
            android:padding="20dp"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Summary"
                android:textStyle="bold"
                android:textColor="#2D3748"
                android:layout_marginBottom="16dp"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Subtotal"
                    android:textColor="#718096"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$135.00"
                    android:textColor="#2D3748"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shipping"
                    android:textColor="#718096"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$10.00"
                    android:textColor="#2D3748"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E2E8F0"
                android:layout_marginVertical="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total"
                    android:textColor="#1A202C"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$145.00"
                    android:textColor="#1A202C"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Place Order Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPlaceOrder"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Place Order"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/bg_purple_button"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"/>

    </LinearLayout>
</ScrollView>
